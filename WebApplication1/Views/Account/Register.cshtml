@model WebApplication1.Models.RegisterViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Login.cshtml";

}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">


            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <br />
                <br />
                <br />
                <br />
                <span class="login100-form-title p-b-34">

                    Account Register
                </span>
                <div class="container">
                    <div class="row">
                        <div class="form-group">
                            <label class="col-md-12 control-label">Company name</label>
                            <div class="col-md-12">
                                <div class="" data-validate="Type user name">
                                    <input type="text" class="form-control col-md-12" placeholder="Company name" name="CompanyName" required="this field required" />
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-12 control-label">Owner name</label>
                            <div class="col-md-12">
                                <div class="" data-validate="Type user name">
                                    <input type="text" class="form-control col-md-12" placeholder="Owner name" name="OwnerName" required="this field required" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-12 control-label" })
                                <div class="col-md-12">
                                    <div class="" data-validate="Type user name">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "User name" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">

                            @Html.LabelFor(m => m.Password, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                <div class="" data-validate="Type user password">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                            <div class="col-md-12">
                                <div class="" data-validate="repeat your password">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Repeat The password" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <br />
                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Sign in
                    </button>
                </div>
                <div class="w-full text-center p-t-27 p-b-239">
                    <a href="@Url.Action("Login", "Account")" class="txt2">
                        Already have an account? Login now
                    </a>
                </div>
            }

            <div class="login100-more"></div>
        </div>
    </div>
</div>
<div id="dropDownSelect1"></div>
